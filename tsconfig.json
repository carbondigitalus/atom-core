{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "lib": ["DOM", "ES2020"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",

    "jsx": "react-jsx",
    "jsxImportSource": "@atomdev/core",

    "baseUrl": ".",
    "paths": {
      "@atomdev/core": ["./src"],
      "@atomdev/core/*": ["./src/*"],
      "@atomdev/core/jsx-runtime": ["./src/runtime/jsx-runtime.ts"],
      "@atomdev/core/jsx-dev-runtime": ["./src/runtime/jsx-dev-runtime.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "vite.config.ts", "examples/**/*"]
}
