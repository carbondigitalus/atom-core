{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2021",
    "types": ["node", "@wdio/globals/types", "@wdio/mocha-framework"]
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
